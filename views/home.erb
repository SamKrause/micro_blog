<div class="cSpan">
  <div class="headBK"></div>
  
  <div style="height:500px; ">
    <header><p class="twitterLogo" />
    <div class="user_Access">
    <ul>
    <a href="/login"><li>Log In</li></a>
    <a href="/sign_up"><li>Sign Up</li></a>
    </ul>
    </div></header>
  
  </div>
</div>
<div style="height:150px;"></div>
<div class="page_posts_bk">
  <div class="ome_posts_wrap">
    <div>
      <h2>Welcome <%= @user ? @user.fname : "Guest" %></h2>
      <h3> Here's what you've missed so far</h3>
    </div>

    <% @posts.reverse.take(10).each do |post| %>

    <div class='home-posts' >
    
      <form method="POST" action="/other_user">
    <input type="hidden" name="other_user_handle" value=<%= User.getHandle(post.user_id) %>>
    <button>
      <p><%= User.getHandle(post.user_id) %></p>
    </button>
  </form>

  
      <div class="post_message"><%= post.message %></div>
      <div class="post_date">Posted On: <%= post.created_at %></div>

       <div class="follow"> 

       <form method="POST" action="/follow_other_user" >
          <label for"followed_id">Follow</label>

          <input type="hidden" name="followed_id" value=<%= post.user_id %>>

          <input type="submit">
        </form>

        <form method="POST" action="/unfollow_other_user" >
          <div class="lblFloat"><label  for"followed_id">Unfollow</label></div>
          <div class="lblFloat"><input type="hidden" name="followed_id" value=<%= post.user_id %>></div>
          <div class="lblFloat"><input type="submit"></div>
        </form>

        </div>
    </div>

    <% end %>
    </div>
</div>

